<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luthfi.guestbook">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.editguest.EditGuestActivity"/>
        <activity android:name=".ui.guestdetail.GuestDetailActivity" />
        <activity android:name=".ui.editevent.EditEventActivity" />
        <activity android:name=".ui.eventdetail.EventDetailActivity" />
        <activity android:name=".ui.addguest.AddGuestActivity" />
        <activity android:name=".ui.addevent.AddEventActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label=""
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>